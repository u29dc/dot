{
	"$schema": "https://json.schemastore.org/claude-code-settings.json",
	"env": {
		"CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
	},
	"autoUpdatesChannel": "latest",
	"teammateMode": "in-process",
	"alwaysThinkingEnabled": true,
	"spinnerTipsEnabled": false,
	"includeCoAuthoredBy": false,
	"outputStyle": "Explanatory",
	"statusLine": {
		"type": "command",
		"command": "bunx -y ccstatusline@latest",
		"padding": 0
	},
	"hooks": {
		"PreToolUse": [{ "matcher": "Write|Edit|MultiEdit", "hooks": [{ "type": "command", "command": "/Users/admin/.git-ai/bin/git-ai checkpoint claude --hook-input stdin" }] }],
		"PostToolUse": [{ "matcher": "Write|Edit|MultiEdit", "hooks": [{ "type": "command", "command": "/Users/admin/.git-ai/bin/git-ai checkpoint claude --hook-input stdin" }] }]
	},
	"permissions": {
		"defaultMode": "acceptEdits",
		"allow": [
			"Read",
			"Edit",
			"MultiEdit",
			"Write",
			"Glob",
			"Grep",
			"LS",
			"TodoWrite",
			"Task",
			"Bash",
			"WebSearch",
			"WebFetch",

			"Skill(align)",
			"Skill(compose)",
			"Skill(craft)",
			"Skill(create)",
			"Skill(loop)",
			"Skill(prompts)"
		],
		"ask": [],
		"deny": []
	}
}
